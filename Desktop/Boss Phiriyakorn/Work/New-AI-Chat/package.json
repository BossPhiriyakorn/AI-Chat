{
  "name": "line-ai-chatbot",
  "version": "1.0.0",
  "description": "AI Chat Bot for LINE Official Account using Gemini AI, Google Docs and Google Sheets",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "node test/test-setup.js",
    "test:setup": "node test/test-setup.js",
    "env:setup": "node scripts/env-setup.js setup",
    "env:show": "node scripts/env-setup.js show",
    "env:validate": "node scripts/env-setup.js validate",
    "build": "echo \"No build step required\"",
    "deploy": "node scripts/deploy.js",
    "docker:build": "docker build -t line-ai-chatbot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env line-ai-chatbot",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "pm2:setup": "node scripts/pm2-setup.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop line-ai-chatbot",
    "pm2:restart": "pm2 restart line-ai-chatbot",
    "pm2:reload": "pm2 reload line-ai-chatbot",
    "pm2:delete": "pm2 delete line-ai-chatbot",
    "pm2:logs": "pm2 logs line-ai-chatbot",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:info": "pm2 info line-ai-chatbot",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "ping": "curl -f http://localhost:3000/ping || exit 1",
    "logs:rotate": "node scripts/log-rotation.js",
    "logs:stats": "node scripts/log-rotation.js --stats",
    "logs:compress": "node scripts/log-rotation.js --compress",
    "logs:cleanup": "node scripts/log-rotation.js --cleanup",
    "deps:check": "node scripts/update-deps.js check",
    "deps:update": "node scripts/update-deps.js update",
    "deps:latest": "node scripts/update-deps.js latest",
    "deps:audit": "node scripts/update-deps.js audit",
    "deps:fix": "node scripts/update-deps.js fix",
    "deps:fix-force": "node scripts/update-deps.js fix-force",
    "deps:install": "node scripts/update-deps.js install",
    "deps:clean": "node scripts/update-deps.js clean",
    "deps:info": "node scripts/update-deps.js info"
  },
  "keywords": [
    "line",
    "chatbot",
    "ai",
    "gemini",
    "google-docs",
    "google-sheets"
  ],
  "author": "Boss Phiriyakorn",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "@google/generative-ai": "^0.2.1",
    "googleapis": "^128.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "body-parser": "^1.20.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
